/* page/addNote/index.wxss */
@import "../../iconfont.wxss";
@import "../addNote/assets/iconfont.wxss";

.page-editor {
  background-color: var(--weui-BG-2);
}
.editor-header {
  height: 80rpx;
  right: 0;
  padding: 20rpx 20rpx 0;
}
.editor-save-btn {
  background-color: var(--weui-theme);
  color: white;
  float: right;
  font-size: 14px;
  margin: 0;
  max-width: 100rpx;
  padding: 10rpx;
}
.editor-header .iconfont {
  float: right;
  margin: 10rpx 20rpx;
}
.editor-content {
  /* width: 100%; */
  height: 80%;
}
.editor-title {
  position: relative;
  /* width: 100%; */
  height: 80rpx;
  font-size: 50rpx;
  margin: 20rpx;
  align-items: center;
  z-index: 1;
}
.editor-title__input {
  position: relative;
  height: 100%;
  align-items: center;
  /* color: var(--weui-theme); */
}
.titleStyle {
  font-weight: 800;
  /* color: var(--weui-theme); */
}

/*editor-container*/
.editor-container { 
  left: 0; 
  width: 100%;
}

.ql-container {
  box-sizing: border-box;
  width: 100%;
  height: 100%;
  font-size: 16px;
  line-height: 1.5;
  overflow: auto;
  padding: 10px 10px 20px 10px;
  border-top: 1px solid #ECECEC;
}

.ql-active {
  color: var(--weui-theme);
}

.placeholder-update {
  color: #808080;
  text-align: center;
}

.iconfont {
  display: inline-block;
  width: 30px;
  height: 30px;
  cursor: pointer;
  font-size: 20px;
}

.toolbar {
  box-sizing: border-box;
  padding: 0 10px;
  height: 50px;
  width: 100%;
  position: fixed;
  left: 0;
  right: 100%;
  bottom: 0;
  display: flex;
  align-items: center;
  justify-content: space-between;
  border: 1px solid #ECECEC;
  border-left: none;
  border-right: none;
  background-color: white;
  white-space: nowrap;
}
.scroll-view_H{
  width: auto;
  overflow: hidden;
}
/*隐藏滚动条*/
::-webkit-scrollbar{
  width: 0;
  height: 0;
  color: transparent;
}
.iconfont {
  display: inline-block;
  margin-right: 10rpx;
}
