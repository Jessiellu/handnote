<!--page/login/index.wxml-->
<view class="page-login">
  <view class="login-container">
    <view class="login-header-portrait">
      <image src="../../image/logo.png"></image>
    </view>
    <view class="login-title">
      <text>Handnote 笔记</text>
    </view>
    <view class="login-content">
      <view class="content-title">申请获取以下权限</view>
      <view class="content-tip">获取你的公开信息(昵称，头像，微信号)</view>
    </view>
    <view class="userinfo">
      <button
        class="content-btn"
        open-type="getUserInfo"
        type="primary"
        lang="zh_CN"
        bindgetuserinfo="onGetOpenid"
        bindtap="getUserProfile"
      >微信一键授权登录</button>
    </view>
  </view>
</view>
