.about-us {
  background-color: white;
  display: inline-block;
  width: 100%;
}
.about-us-logo {
  display: flex;
  height: 150rpx;
  width: 150rpx;
  border-radius: 100%;
  text-align: center;
  margin: 50rpx 40% 10rpx;
  overflow: hidden;
}
.about-us-logo  image {
  width: 150rpx;
  height: 150rpx;
  padding: 0;
  margin: 0;
}
.layout-center {
  text-align: center;
}
.about-us-container {
  background-color: white;
  padding: 50rpx;
}
.introduce {
  text-indent: 2em;
}
.detail-title {
  font-size: large;
  font-weight: 700;
  margin-top: 50rpx;
}
strong {
  font-weight: 600;
}
