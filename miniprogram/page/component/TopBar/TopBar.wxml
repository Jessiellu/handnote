<view class="top-bar">
  <view class="top-bar_title">
    <!-- <view class="top-bar_title__item">笔记</view>
    <view class="top-bar_title__item">文件</view> -->
    <view
      wx:for="{{tabs}}"
      wx:key="id"
      class="top-bar_title__item {{item.isActive? 'active':''}}"
      bindtap="hanldeItemTap"
      data-index="{{index}}"
    >
      {{item.name}}
    </view>
  </view>
  <view class="top-bar_content">
    <!-- slot标签 其实是一个占位符 插槽
         父组件调用子组件时，再传递标签过来
         最终这些被传递的标签 就会替换 slot 插槽的位置
     -->
    <slot/>
  </view>
</view>
